@page
@model PersonalPortfolio.Pages.Project1Model // Bytt ut "PersonalPortfolio" med navnet p√• ditt faktiske navnerom

<!DOCTYPE html>
<html lang="no">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Project.Name</title>
    <link href="~/css/output.css" rel="stylesheet" />
</head>

<body>
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold">@Model.Project.Name</h1>
        <p class="mt-2">@Model.Project.Description</p>
        <img src="@Model.Project.ImageUrl" alt="Project Image" class="mt-4" />

        <div class="mt-4">
            <a href="@Model.Project.LiveUrl" target="_blank" class="text-blue-500">Visit Project</a>
            <span> | </span>
            <a href="@Model.Project.GitHubUrl" target="_blank" class="text-blue-500">View on GitHub</a>
        </div>

        <p class="mt-2"><strong>Technologies Used:</strong> @Model.Project.TechnologiesUsed</p>
        <p><strong>Completion Date:</strong> @Model.Project.CompletionDate.ToString("d")</p>
        <a href="/" class="text-blue-500 mt-4 inline-block">Back to Portfolio</a>
    </div>
</body>

</html>